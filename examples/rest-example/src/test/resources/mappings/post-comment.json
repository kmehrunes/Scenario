{
  "request" : {
    "urlPattern" : "/posts/.+/comments",
    "method" : "POST"
  },
  "response" : {
    "status" : 201,
    "headers": {
      "Content-Type": "application/json;utf-8"
    },
    "jsonBody": {
      "id": "{{randomValue type='UUID'}}"
    },
    "transformers": ["response-template"]
  }
}